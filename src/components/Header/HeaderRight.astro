---
import { IconAdd, IconNotifications, IconSettings, IconCast } from '../Icons'
---

<section class='flex flex-1 w-full h-14 items-center justify-end not-xs:pr-4 xs:px-4 gap-0.5'>
  <a href='#' class='not-xs:hidden h-10 max-h-full aspect-square flex items-center justify-center rounded-full transition-colors hover:bg-neutral-700/70'>
    <div class='size-6 flex items-center justify-center overflow-hidden'>
      <IconAdd />
    </div>
  </a>
  <a href='#' class='h-10 max-h-full aspect-square flex items-center justify-center rounded-full transition-colors hover:bg-neutral-700/70'>
    <div class='size-6 flex items-center justify-center overflow-hidden'>
      <IconNotifications notifications='outline' />
    </div>
  </a>
  <a href='#' class='not-xs:hidden h-10 max-h-full aspect-square flex items-center justify-center rounded-full transition-colors hover:bg-neutral-700/70'>
    <div class='size-6 flex items-center justify-center overflow-hidden'>
      <IconSettings />
    </div>
  </a>
  <button class='xs:hidden h-10 max-h-full aspect-square flex items-center justify-center rounded-full transition-colors hover:bg-neutral-700/70'>
    <div class='size-6 flex items-center justify-center overflow-hidden'>
      <IconCast />
    </div>
  </button>
  <a href='#' class='h-10 max-h-full aspect-square flex items-center justify-center rounded-full transition-colors bg-neutral-700/70'>
    <div class='size-6 flex items-center justify-center overflow-hidden'>
      {/* <user.Icon /> */}
    </div>
  </a>
</section>