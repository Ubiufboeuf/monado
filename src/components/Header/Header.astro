---
import HeaderLeft from './HeaderLeft.astro'
import { SearchBar } from './SearchBar'
import HeaderRight from './HeaderRight.astro'

const searchParam = Astro.url.searchParams.get('search') ?? undefined
---

<header class='fixed top-0 z-10 flex items-center md:grid md:place-items-center md:grid-cols-[208px_1fr_208px] w-full h-14 bg-base-dark'>
  <HeaderLeft />
  <SearchBar search={searchParam} client:load />
  <HeaderRight />
</header>